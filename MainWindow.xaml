<Window x:Class="SteamGuardLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Guard Lite"
        Width="440" Height="220"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Loaded="Window_Loaded"
        DragEnter="Window_DragEnter"
        Drop="Window_Drop">

    <DockPanel LastChildFill="True">

        <!-- Simple menu in top-left corner -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Load" Click="AccountLoad_Click" />
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="16"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
            </Grid.ColumnDefinitions>

            <!-- Account -->
            <TextBlock x:Name="AccountText"
                       Grid.Row="1" Grid.Column="1"
                       FontSize="14"
                       Opacity="0.85"
                       Text="No account loaded" />

            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="GuardButton"
                        Grid.Row="0"
                        Height="64"
                        FontSize="28"
                        FontWeight="SemiBold"
                        Content="-----"
                        IsEnabled="False"
                        ToolTip="Click to copy the code to the clipboard"
                        Click="GuardButton_Click" />

                <ProgressBar x:Name="GuardProgress"
                             Grid.Row="2"
                             Height="3"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             IsEnabled="False"
                             ToolTip="Load a maFile to see refresh progress" />

                <TextBlock Grid.Row="4"
                           Opacity="0.6"
                           Text="Click the code to copy it to the clipboard." />

                <TextBlock Grid.Row="6"
                           Opacity="0.6"
                           TextWrapping="Wrap"
                           Text="You can also drag &amp; drop a maFile (.maFile/.json) onto the window." />
            </Grid>
        </Grid>

    </DockPanel>
</Window>